{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "osvVulnerabilityAlerts": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "extends": [
    "config:best-practices",
    "workarounds:all",
    "security:openssf-scorecard",
    ":configMigration",
    ":dependencyDashboard",
    ":gitSignOff",
    ":automergePatch",
    ":semanticCommits",
    ":rebaseStalePrs",
    "mergeConfidence:all-badges"
  ],
  "baseBranchPatterns": [
    "v2"
  ],
  "semanticCommitType": "build",
  "semanticCommitScope": "deps",
  "commitMessageLowerCase": "auto",
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "minimumReleaseAge": "7 days",
  "timezone": "Europe/Stockholm",
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "slsa-framework/slsa-github-generator"
      ],
      "pinDigests": false,
      "description": "SLSA generator must use semantic versioning without digest pinning per security best practices"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "actions"
      ],
      "automerge": true,
      "groupName": "GitHub Actions updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "pinDigests": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "actions",
        "major-update"
      ],
      "groupName": "GitHub Actions major updates",
      "pinDigests": true
    }
  ]
}
