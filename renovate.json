{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "osvVulnerabilityAlerts": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "extends": [
    "config:best-practices",
    "workarounds:all",
    "security:openssf-scorecard",
    ":configMigration",
    ":dependencyDashboard",
    ":gitSignOff",
    ":automergeMinor",
    ":semanticCommits",
    ":rebaseStalePrs",
    "mergeConfidence:all-badges"
  ],
  "baseBranches": ["v2"],
  "semanticCommitType": "build",
  "semanticCommitScope": "deps",
  "commitMessageLowerCase": "auto",
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "minimumReleaseAge": "7 days",
  "timezone": "Europe/Stockholm",
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ]
  },
  "enabledManagers": [
    "github-actions",
    "mise",
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["slsa-framework/slsa-github-generator"],
      "pinDigests": false,
      "description": "SLSA generator must use semantic versioning without digest pinning per security best practices"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "actions"
      ],
      "automerge": true,
      "groupName": "GitHub Actions updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "pinDigests": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "actions",
        "major-update"
      ],
      "groupName": "GitHub Actions major updates",
      "pinDigests": true
    },
    {
      "description": "Group all mise tool dependencies",
      "matchManagers": [
        "mise"
      ],
      "addLabels": [
        "tools"
      ],
      "groupName": "mise tools",
      "groupSlug": "mise-tools"
    },
    {
      "description": "Security and compliance tools",
      "matchManagers": [
        "mise"
      ],
      "matchPackageNames": [
        "aqua:zricethezav/gitleaks",
        "aqua:siderolabs/conform",
        "aqua:rhysd/actionlint"
      ],
      "addLabels": [
        "security-tools"
      ],
      "groupName": "security tools"
    },
    {
      "description": "Documentation and build tools",
      "matchManagers": [
        "mise"
      ],
      "matchPackageNames": [
        "aqua:google/yamlfmt",
        "ubi:rvben/rumdl",
        "github:italia/publiccode-parser-go",
        "aqua:casey/just"
      ],
      "addLabels": [
        "documentation"
      ],
      "groupName": "documentation tools"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/.+\\.ya?ml$/"
      ],
      "description": "Update Docker image references in GitHub Actions",
      "matchStrings": [
        "uses:\\s+docker://(?<depName>[^:]+):(?<currentValue>[^@]+)@(?<currentDigest>sha256:[a-f0-9]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/scripts/sbom/.+\\.sh$/"
      ],
      "description": "Update Syft version in SBOM generation script",
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)[\\s\\n]+SYFT_VERSION=\"(?<currentValue>v[0-9.]+)\""
      ],
      "versioningTemplate": "semver"
    }
  ],
  "prConcurrentLimit": 4,
  "prCreation": "immediate",
  "rangeStrategy": "auto",
  "ignorePresets": [
    ":prHourlyLimit2"
  ],
  "schedule": [
    "after 8:00pm on Saturday",
    "before 11:59pm on Sunday"
  ]
}
